<!DOCTYPE html>
<html>
<head>
    <title>API Call Example</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
    </style>
</head>
<body>

<div class="container" id="resultContainer">
    <h2>Select a Document</h2>
    <select id="documentSelect">
        <option value="">Select a document</option>
    <div id="urlContainer">
            <span id="selectedDocumentId"></span>
    
    </div>
    </select>
</div>


<script>
// Global variable to store selected document ID
var selectedDocumentId = '';

// Function to fetch API data
function fetchApiData() {
    fetch('https://sasserver.demo.sas.com/svi-datahub/documents/alerts/146319a9-d567-421b-b246-3a1b9cdcdc55/attachments')
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            // Display API result
            displayResult(data);
        })
        .catch(error => {
            console.error('There was a problem with the fetch operation:', error);
            document.getElementById('apiResult').textContent = 'Error fetching data from the API';
        });
}

// Function to display API result
function displayResult(data) {
    var dropdownHTML = '<select id="documentSelect">';
    dropdownHTML += '<option value="">Select a document</option>';
    data.items.forEach(function(item) {
        dropdownHTML += '<option value="' + item.id + '">' + item.name + '</option>';
    });
    dropdownHTML += '</select>';
    document.getElementById('apiResult').innerHTML = dropdownHTML;

    // Event listener to handle document selection
    document.getElementById('documentSelect').addEventListener('change', function(event) {
        selectedDocumentId = event.target.value; // Storing the selected document ID in the variable
        if (selectedDocumentId) {
            // Do something with the selected document ID
            console.log('Selected document ID:', selectedDocumentId);
        } else {
            // No document selected
            console.log('No document selected');
        }
    });
}

// Initial fetch when the page loads
fetchApiData();

// Polling interval (in milliseconds)
const pollingInterval = 5000; // 5 seconds

// Set up polling
setInterval(fetchApiData, pollingInterval);


</script>

</body>
</html>
