                }

                /* Rich text styling within summary content */
                .summary h1 {
                        font-size: var(--fs-8);
                        margin: 0 0 8px
                                /* Bottom spacing for content separation */
                }

                .summary h2 {
                        font-size: var(--fs-7);
                        margin: 14px 0 6px
                                /* Top and bottom spacing for hierarchy */
                }

                .summary p {
                        margin: 6px 0
